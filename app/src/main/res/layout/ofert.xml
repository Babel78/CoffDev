<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/imag"
            android:layout_width="250dp"
            android:layout_height="450dp"
            android:src="@drawable/offer1"
            android:layout_above="@+id/aceptar"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_marginBottom="14dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/texto"
        android:textColor="#ffffff"
        android:text="Aceptar"
        android:id="@+id/aceptar"
        android:layout_alignBaseline="@+id/rechazar"
        android:layout_alignBottom="@+id/rechazar"
        android:layout_alignEnd="@+id/imag" />

    <Button
        android:id="@+id/rechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/texto"
        android:text="Rechazar"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imag"
        android:layout_marginBottom="19dp" />

</RelativeLayout>